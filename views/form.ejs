    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
        }

        .sidebar {
            width: 250px;
            background: linear-gradient(180deg, #4e54c8 0%, #8f94fb 100%);
            color: white;
            padding-top: 20px;
            height: 100vh;
            position: fixed;
        }

        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            border-radius: 5px;
            margin: 5px 15px;
            transition: all 0.3s;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            color: #fff;
            background-color: rgba(255, 255, 255, 0.1);
            transform: translateX(5px);
        }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        h2 {
            font-weight: 600;
            color: #4e54c8;
            margin-bottom: 20px;
            border-bottom: 2px solid #4e54c8;
            padding-bottom: 10px;
        }

        .info-row {
            display: flex;
            flex-direction: column;
            margin-bottom: 15px;
        }

        .info-row label {
            font-weight: 500;
            color: #333;
            margin-bottom: 5px;
        }

        .info-row .input-group {
            display: flex;
            align-items: center;
        }

        .info-row .input-group i {
            padding: 10px;
            background: #4e54c8;
            color: white;
            min-width: 40px;
            text-align: center;
            border-top-left-radius: 5px;
            border-bottom-left-radius: 5px;
        }

        .info-row input[type="text"],
        .info-row input[type="email"],
        .info-row input[type="password"],
        .info-row input[type="tel"],
        .info-row input[type="number"] {
            width: 100%;
            padding: 10px;
            margin: 5px 0 20px;
            box-sizing: border-box;
            border: 2px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
            font-size: 16px;
            color: #333;
            transition: border-color 0.3s, box-shadow 0.3s;
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }

        .info-row input[type="text"]:focus,
        .info-row input[type="email"]:focus,
        .info-row input[type="password"]:focus,
        .info-row input[type="tel"]:focus,
        .info-row input[type="number"]:focus {
            border-color: #4e54c8;
            box-shadow: 0 0 5px rgba(78, 84, 200, 0.5);
            background-color: #fff;
        }

        .info-row input[type="text"]::placeholder,
        .info-row input[type="email"]::placeholder,
        .info-row input[type="password"]::placeholder,
        .info-row input[type="tel"]::placeholder,
        .info-row input[type="number"]::placeholder {
            color: #aaa;
            font-style: italic;
        }

        button {
            background-color: #4e54c8;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 16px;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #3d44b8;
        }

        button a {
            color: white;
            text-decoration: none;
        }

        select {
            width: 100px;
            padding: 10px;
            margin: 5px;
            border: 2px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
            font-size: 16px;
            color: #333;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        select:focus {
            border-color: #4e54c8;
            box-shadow: 0 0 5px rgba(78, 84, 200, 0.5);
            background-color: #fff;
        }
    </style>
</head>

