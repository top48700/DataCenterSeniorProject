    <script>
        // Populate day options for all date selectors
        const populateDays = (selectElement) => {
            for (let i = 1; i <= 31; i++) {
                const option = document.createElement('option');
                option.value = i;
                option.textContent = i;
                selectElement.appendChild(option);
            }
        };

        // Populate month options for all date selectors
        const populateMonths = (selectElement) => {
            const months = [
                'January', 'February', 'March', 'April', 'May', 'June',
                'July', 'August', 'September', 'October', 'November', 'December'
            ];
            months.forEach((month, index) => {
                const option = document.createElement('option');
                option.value = String(index + 1).padStart(2, '0');
                option.textContent = month;
                selectElement.appendChild(option);
            });
        };

        // Populate year options for all date selectors
        const populateYears = (selectElement) => {
            const currentYear = new Date().getFullYear();
            for (let i = currentYear; i >= 1900; i--) {
                const option = document.createElement('option');
                option.value = i;
                option.textContent = i;
                selectElement.appendChild(option);
            }
        };

        // Populate all date select elements
        populateDays(document.getElementById('dob_day'));
        populateDays(document.getElementById('father_dob_day'));
        populateDays(document.getElementById('mother_dob_day'));

        populateMonths(document.getElementById('dob_month'));
        populateMonths(document.getElementById('father_dob_month'));
        populateMonths(document.getElementById('mother_dob_month'));

        populateYears(document.getElementById('dob_year'));
        populateYears(document.getElementById('father_dob_year'));
        populateYears(document.getElementById('mother_dob_year'));

    </script>
